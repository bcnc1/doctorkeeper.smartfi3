<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.thinoo.drcamlink2"
    android:versionCode="55"
    android:versionName="2.2.5">

    <uses-feature android:name="android.hardware.usb.host" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <!-- For Camera -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--https://stackoverflow.com/questions/45940861/android-8-cleartext-http-traffic-not-permitted -->
    <application
        android:name="com.orm.SugarApp"
        android:icon="@drawable/smartfi_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.RYC"
        tools:replace="android:icon"
        android:usesCleartextTraffic="true">



        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/launcher_label"
            android:launchMode="singleTask"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter" />

        </activity>
        <activity
            android:name=".activities.AppSettingsActivity"
            android:label="@string/activity_app_settings_title"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".activities.LaunchCameraActivity" />
        <activity android:name=".activities.LaunchVrecordActivity" />
        <service
            android:name=".services.UploadService"
            android:exported="false">
        </service>
        <!--<activity-->
            <!--android:name="org.acra.CrashReportDialog"-->
            <!--android:excludeFromRecents="true"-->
            <!--android:finishOnTaskLaunch="true"-->
            <!--android:launchMode="singleInstance"-->
            <!--android:theme="@android:style/Theme.Dialog" />-->

        <!-- <meta-data android:name="AA_DB_NAME" android:value="drcamlink" /> -->
        <!-- <meta-data android:name="AA_DB_VERSION" android:value="5" /> -->
        <!-- <meta-data android:name="AA_MODELS" android:value="com.thinoo.drcamlink.models.PhotoModel" /> -->

        <meta-data android:name="DATABASE" android:value="smartfi.db" />

        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.thinoo.drcamlink2" />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.thinoo.drcamlink2"
            android:exported="false"

            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>

